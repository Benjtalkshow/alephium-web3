{
  "name": "my-dapp-template",
  "version": "0.1.0",
  "license": "GPL",
  "scripts": {
    "build": "npm run clean:windows && npm run clean:unix && npx tsc --build .",
    "clean:windows": "node -e \"if (process.platform === 'win32') process.exit(1)\" || , if exist dist rmdir /Q /S dist",
    "clean:unix": "node -e \"if (process.platform !== 'win32') process.exit(1)\" || rm -rf dist",
    "greeter": "npm run build && node dist/src/greeter.js"
  },
  "dependencies": {
    "@alephium/web3": "0.2.0-rc.19",
    "@alephium/web3-wallet": "0.2.0-rc.19",
    "@alephium/cli": "0.2.0-rc.19"
  },
  "devDependencies": {
    "@types/elliptic": "^6.4.13",
    "@types/node": "^16.7.8",
    "typescript": "^4.4.2",
    "ts-node": "^10.7.0",
    "jest": "^28.1.0",
    "@types/jest": "^27.5.1",
    "ts-jest": "^28.0.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "bracketSameLine": false,
    "trailingComma": "none"
  }
}
