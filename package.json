{
  "license": "GPL",
  "type": "commonjs",
  "dependencies": {
    "@alephium/cli": "workspace:0.8.2",
    "@alephium/web3": "workspace:0.8.2",
    "@alephium/web3-test": "workspace:0.8.2",
    "@alephium/web3-wallet": "workspace:0.8.2"
  },
  "devDependencies": {
    "@types/jest": "^28.1.8",
    "@types/node": "^16.18.23",
    "eslint": "^8.37.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^28.1.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "clean": "rm -rf .parcel-cache && pnpm -r run clean",
    "build": "pnpm --stream -r run build",
    "codegen": "ts-node gen.ts",
    "test": "jest -i --config ./jest-config.json --forceExit",
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint . --fix --ext .ts,.txs",
    "audit": "npm audit --omit=dev",
    "update-schemas": "pnpm --stream -r run update-schemas",
    "publish": "npm run build && lerna exec -- npm publish --access public",
    "start-devnet": "pnpm --stream -r run start-devnet",
    "stop-devnet": "pnpm --stream -r run stop-devnet",
    "restart-devnet": "pnpm --stream -r run restart-devnet"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "bracketSameLine": false,
    "trailingComma": "none"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
