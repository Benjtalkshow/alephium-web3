{
  "name": "alf-client",
  "version": "0.2.1",
  "description": "ALF node and wallet client",
  "license": "GPL",
  "types": "dist/lib/index.d.ts",
  "type": "module",
  "repository": "git://github.com/alephium/alephium-client.git",
  "homepage": "https://gitlab.com/alephium/alephium-client",
  "bugs": {
    "url": "https://gitlab.com/alephium/alephium-client/-/issues"
  },
  "author": "Cheng Wang <cheng.wang@alephium.org>",
  "main": "./dist/lib/index.js",
  "scripts": {
    "compile": "rm -rf dist && npx tsc",
    "fetch-alephium-schema": "npx swagger-typescript-api -p https://raw.githubusercontent.com/alephium/alephium/master/api/src/main/resources/openapi.json -o ./api -n api-alephium.ts",
    "fetch-explorer-schema": "npx swagger-typescript-api -p http://localhost:9090/docs/openapi.yaml -o ./api -n api-explorer.ts",
    "dev": "tsnd --respawn lib/index.ts",
    "lint": "eslint lib/ || exit 0",
    "test": "npm run compile && jest --useStderr --silent=false --verbose=true --config jestconfig.json"
  },
  "bin": {
    "alf-cli": "./bin/alf-cli"
  },
  "dependencies": {
    "base-x": "^3.0.2",
    "bcfg": "~0.1.6",
    "bip32": "^2.0.5",
    "bip39": "^3.0.2",
    "blakejs": "^1.1.0",
    "browserify-sha3": "^0.0.4",
    "elliptic": "^6.5.4"
  },
  "devDependencies": {
    "@types/elliptic": "^6.4.12",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "jest": "^27.0.4",
    "prettier": "^2.2.1",
    "swagger-typescript-api": "^8.0.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tslib": "^2.3.0",
    "typescript": "^4.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
